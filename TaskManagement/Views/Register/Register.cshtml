@using TaskManagement.Models.Models;
@model RegisterUserModel

@{
    ViewData["Title"] = "Login";
    Layout = "_UnRegisterLayout";
}

<link href="~/css/index.css" rel="stylesheet" />
<script src="~/js/register.js"></script>

<h4>Sign up</h4> 

<div class="row">
    <div class="col-md-12">
        <form>
            <div class="row col-3 m-2">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" id="Email" class="form-control" />
            </div>
            <div class="row col-3 m-2">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" id="UserName" class="form-control" />
            </div>

            <div class="row col-3 m-2">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" id="Password" class="form-control" />
            </div>

            <div class="row col-3 m-2">
                <label asp-for="MobileNumber" class="control-label"></label>
                <input asp-for="MobileNumber" id="MobileNumber" class="form-control" />
            </div>

            <div class="row col-3  m-2">
                <input type="button" value="Sign up" onclick="RegisterBtnClick()" class="btn btn-primary" />
            </div>
            
        </form>
    </div>
</div>