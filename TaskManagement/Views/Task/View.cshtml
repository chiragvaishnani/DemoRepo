@using TaskManagement.Model;
@model TaskModel
@{
    ViewData["Title"] = "View Task";
    Layout = "_Layout";
}
<h4>View Task</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form>
            <div class="row">
                <div class="form-group col-4 mt-2">
                    <label asp-for="TaskName" class="control-label"></label>
                    <input asp-for="TaskName" class="form-control" />
                </div>
                <div class="form-group col-4 mt-2">
                    <label asp-for="TaskDescription" class="control-label"></label>
                    <input asp-for="TaskDescription" class="form-control" />
                </div>
                <div class="form-group col-4 mt-2">
                    <label asp-for="StatusName" class="control-label">Status Name</label>
                    <input asp-for="StatusName" class="form-control" />
                </div>
            </div>
        </form>
    </div>
</div>

